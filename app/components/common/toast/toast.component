    this.on('update', () => {
      this.show = this.opts.toast ? true : false
    })

    let typeToClsMapping = { SUCCESS: 'success', INFO: 'info', WARNING: 'warning', ERROR: 'error' }
    this.toastType = () => {
      return typeToClsMapping[this.opts.toast.type]
    }

  </script>

