<toast>
  <div class="toast { toastType() }" show={ show }>
    <div> { opts.toast.text } </div>
    <div></div>
  </div>

  <script>

    //this.toasts = []
    //this.toast = { text: 'Hello' } //null

    // setTimeout(() => {
